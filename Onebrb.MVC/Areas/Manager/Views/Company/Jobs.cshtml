@using Onebrb.MVC.Areas.Manager.Models;
@model List<Job>

@{
    ViewData["Title"] = "Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (@Model.Count == 0)
{
    <h2>This company doesn't have jobs posted yet.</h2>
}
else
{
    <h2>All jobs by @Model[0].Company.Name</h2>

    @foreach (var job in @Model)
    {
        <p>@job.Title</p>
    }
}

