@using Onebrb.MVC.Areas.Manager.Models;
@model List<Job>

@{
    ViewData["Title"] = "Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (@Model.Count == 0)
{
    <h2>This company doesn't have any jobs posted yet.</h2>
}
else
{
    <h2>All jobs by @Model[0].Company.Name</h2>
    <div class="company-job-options form-group">
        <a type="button" class="btn btn-success" asp-area="Manager" asp-controller="Company" asp-action="CreateJob" asp-route-id="@Model[0].Company.Id">New job</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Job</th>
                <th scope="col">Applicants</th>
                <th scope="col">Posted</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < @Model.Count; i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model[i].Title</td>
                    <td>5</td>
                    <td>27/5/2020</td>
                </tr>
            }
            </tbody>
    </table>

    @*@foreach (var job in @Model)
    {

        <p><a asp-controller="Job" asp-action="View" asp-route-id="@job.Id">@job.Title</a></p>
    }*@
}

