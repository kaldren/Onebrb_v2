@model Onebrb.MVC.Areas.Manager.Models.Company

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <h2>Add new company</h2>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Url"></label>
            <input asp-for="Url" class="form-control" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> &nbsp; Add company</button>
        <a asp-action="Index" class="btn btn-primary"><i class="fas fa-list"></i>&nbsp; All companies</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}