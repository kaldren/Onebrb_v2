@using Onebrb.MVC.Areas.Manager.ViewModels.Company;
@model EditCompanyVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6">
    <form enctype="multipart/form-data" asp-action="Edit" method="post">
        <div class="form-group">
            <h2>Edit @Model.Name</h2>
        </div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Url"></label>
            <input asp-for="Url" class="form-control" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompanyLogoImage" class="control-label"></label>
            <div class="custom-file">
                <input asp-for="CompanyLogoImage" class="company-logo-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
            <span asp-validation-for="CompanyLogoImage" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success"><i class="fas fa-save fas--space-right"></i>Save</button>
        <button type="submit" class="btn btn-info" asp-action="Index"><i class="fas fa-window-close fas--space-right"></i>Cancel</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".company-logo-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
