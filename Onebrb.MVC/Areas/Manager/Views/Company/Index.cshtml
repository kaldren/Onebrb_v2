@using Onebrb.MVC.Areas.Manager.Models;
@model List<Company>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Company Index</h1>

@if (Model.Count() == 0)
{
    <h2>You don't have any companies created.</h2>
    <div>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> &nbsp; New company</a>
    </div>
}
else
{
    <div class="form-group">
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> &nbsp; New company</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Company</th>
                <th scope="col">Address</th>
                <th scope="col">Url</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Address</td>
                    <td>@Model[i].Url</td>
                    <td>
                        <a class="btn btn-primary">Edit</a>
                        <a class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
