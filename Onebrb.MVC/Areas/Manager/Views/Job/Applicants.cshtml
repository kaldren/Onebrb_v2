@using Onebrb.MVC.Areas.Manager.Dtos.Job;
@model List<JobApplicantsListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All applicants</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First name</th>
                <th scope="col">Last name</th>
                <th scope="col">Username</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].FirstName</td>
                <td>@Model[i].LastName</td>
                <td><a asp-controller="Profile" asp-action="View" asp-route-id="@Model[i].UserName">@Model[i].UserName</a></td>
                <td>
                    <a asp-controller="Profile" asp-action="View" asp-route-id="@Model[i].UserName" class="btn btn-primary" title="View profile"><i class="fas fa-user"></i></a>
                    &nbsp;
                    <a asp-controller="Application" asp-action="Delete" asp-route-id="@Model[i].ApplicationId" class="btn btn-danger" title="Delete application"><i class="fas fa-window-close"></i></a>
                </td>
            </tr>
            }

        </tbody>
    </table>

}
